<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="10dp"
    android:transitionName="shared_view"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:text="BTC"
        android:textColor="@color/text_normal"

        />

    <TextView
        android:id="@+id/volume_24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:textColor="@color/textColorGrayLabel"
        android:layout_marginTop="5dp"
        android:text="24小时交易量"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/volume_24h"
        android:layout_marginTop="5dp"
        android:textColor="@color/textColorGrayLabel"
        android:text="总市值"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:textColor="@color/textColorBlackTitle"
        android:text="current price"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/price"
        android:layout_below="@id/price"
        android:gravity="right"
        android:textColor="@color/textColorGrayLabel"
        android:text="USDT"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/change_24h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorBlackTitle"
            android:text="change_24h"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/change_1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/textColorGrayLabel"
            android:text="change_1h"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/change_7d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:textColor="@color/textColorGrayLabel"
            android:text="change_7d"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout><!--</android.support.v7.widget.CardView>-->